<section class="row">
	<div class="textbox col-md-9 col-md-offset-2">
	<%= form_for(:textblock, url: '/index') do |f| %>
		<%= f.text_area :content, placeholder: "...", required: true%>
		<%= f.submit "Calculate", class: "btn btn-primary calc-btn pull-right"%>
			<% end %>		
	</div>
</section>
<section class="row">
	<article class="results col-md-offset-1">
	<% unless @textblock.nil? %>
		<hr>
		<h1 id = "results">R<span id="second_letter">e</span>sul<span id = "fifth_letter">t</span>s!</h1>
		<section class="row">	
			<div class="col-md-4 col-md-offset-1">
				<ul>Words:  
					<li><%= @textblock.count_words %></li>
				</ul>
				<ul>Most common words:<br>
					<li><%=@textblock.most_frequently_used_words %></li>
				</ul>
			</div>
			<div class="col-md-4">
				<ul>Letters: 
					<li><%= @textblock.count_letters %> 
				</ul>
				<ul>Most common letters: 
					<br><li><%= @textblock.most_frequently_used_letters %></li>
				</ul>
			</div>
		</section>
		<section class="row">
				<div class="longest_sentence col-md-12 col-md-offset-1">
					<ul>Longest sentence: <pre class = 'displayed_data'> <%= @textblock.longest_sentence %> </pre></ul>
				</div>				
		</section>
		<section class="row">
			<div class="longest_words col-md-12 col-md-offset-1">
				<ul>Longest word: <li><%= @textblock.longest_word %></li></ul>
				<ul>Number of sentences: <li><%= @textblock.number_of_sentences %> </li></ul>
			</div>
		</section>
		<section class="row">
			<div class= "col-md-9 col-md-offset-2">
				<a href="/index" class = "reset-btn btn btn-primary calc-btn pull-right">Reset</a>
			</div>
		</section>
	<% end %>
	</article>
</section>